0:addGrpToPeaks <- function(x){
0:peaks <- map(x, "mergedPeaks") %>%
0:map(., data.frame) %>%
0:imap(., ~{
0:name <- .y
0:df <- .x
0:df %>%
0:dplyr::mutate(grp = name)
0:}) %>%
0:map(., GRanges)
0:return(peaks)
0:}
